<launch>
  <!-- Waypoint Publisher untuk trajectory circle -->
  <node pkg="mpc_offboard"
        type="waypoint_publisher_mavros.py"
        name="waypoint_publisher_mavros"
        output="screen">

    <!-- PILIH MODE: circle -->
    <param name="waypoint_mode" value="circle"/>

    <!-- PARAMETER TRAJECTORY CIRCLE -->
    <param name="circle_center_n" value="0.0"/>      <!-- Center North (m) -->
    <param name="circle_center_e" value="0.0"/>      <!-- Center East (m) -->
    <param name="circle_radius" value="12.0"/>       <!-- Radius (m) - smaller for testing -->
    <param name="circle_altitude" value="-5.0"/>     <!-- Altitude NED (negative = up) -->
    <param name="circle_points" value="80"/>         <!-- 80 points = 4.5Â° spacing -->

    <!-- PARAMETER BEHAVIOUR - SAFE MODE FOR REAL FLIGHT -->
    <param name="continuous_mode" value="true"/>      <!-- Smooth trajectory following -->
    <param name="lookahead_distance" value="2.5"/>    <!-- 2.5m - balance smoothness & tracking -->
    <param name="loop_mission" value="true"/>         <!-- Loop continuously -->
    <param name="acceptance_radius" value="1.2"/>     <!-- 1.2m - reasonable tolerance -->

  </node>
</launch>
