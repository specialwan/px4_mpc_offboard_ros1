<launch>
  <!-- Waypoint Publisher untuk trajectory square -->
  <node pkg="mpc_offboard"
        type="waypoint_publisher_mavros.py"
        name="waypoint_publisher_mavros"
        output="screen">

    <!-- PILIH MODE: square -->
    <param name="waypoint_mode" value="square"/>

    <!-- PARAMETER TRAJECTORY SQUARE -->
    <param name="square_center_n" value="0.0"/>
    <param name="square_center_e" value="0.0"/>
    <param name="square_size" value="20.0"/>
    <param name="square_altitude" value="-5.0"/>
    <param name="square_points_per_side" value="10"/>
    <param name="square_constant_yaw" value="false"/>

    <!-- PARAMETER BEHAVIOUR -->
    <param name="continuous_mode" value="true"/>
    <param name="lookahead_distance" value="2.0"/>
    <param name="loop_mission" value="false"/>
    <param name="acceptance_radius" value="0.8"/>

  </node>
</launch>
